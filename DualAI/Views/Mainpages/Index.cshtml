@model IEnumerable<DualAI.Models.Mainpage>

@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <h1 class="text-center my-4">Lista Prompt</h1>
    <div class="text-center my-2">
        <a asp-action="Create" class="btn btn-primary btn-sm">Crea Nuovo</a>
    </div>
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Prompt)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prompt)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Nickname" class="btn btn-info btn-sm">Modifica</a> |
                        <a asp-action="Push" asp-route-id="@item.Nickname" class="btn btn-info btn-sm">Chiamata</a> |
                        <a asp-action="Delete" asp-route-id="@item.Nickname" class="btn btn-danger btn-sm">Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
